@model WebApplicationTest.DTOs.CategoryDto

@{
    ViewData["Title"] = "Edit Category";
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Edit Category</h2>
            <p>Update category details</p>
        </div>

        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" name="ImageFile" class="form-control-file" />
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" alt="Current Image" style="max-width: 200px; margin-top: 10px;" />
                }
            </div>
            <div class="form-group">
                <label asp-for="ParentCategoryId"></label>
                <select asp-for="ParentCategoryId" asp-items="@(new SelectList(ViewBag.ParentCategories, "Id", "Name"))" class="form-control">
                    <option value="">-- No Parent Category --</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}