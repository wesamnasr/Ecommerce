@model WebApplicationTest.DTOs.CategoryDto

@{
    ViewData["Title"] = "Create Category";
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Create Category</h2>
            <p>Add a new category</p>
        </div>

        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image"></label>
                <input type="file" name="ImageFile" class="form-control-file" />
            </div>
            <div class="form-group">
                <label asp-for="ParentCategoryId"></label>
                <select asp-for="ParentCategoryId" asp-items="@(new SelectList(ViewBag.ParentCategories, "Id", "Name"))" class="form-control">
                    <option value="">-- No Parent Category --</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}