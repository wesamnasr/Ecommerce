@model WebApplicationTest.DTOs.ProductDto

@{
    ViewData["Title"] = "Product Details";
}

<section id="about" class="about">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>@Model.Name</h2>
            <p>Product Details</p>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <h4>Name</h4>
                <p>@Model.Name</p>
            </div>
            <div class="col-lg-6">
                <h4>Description</h4>
                <p>@Model.Description</p>
            </div>
            <div class="col-lg-6">
                <h4>Price</h4>
                <p>@Model.Price.ToString("C")</p>
            </div>
            <div class="col-lg-6">
                <h4>Stock</h4>
                <p>@Model.Stock</p>
            </div>
            <div class="col-lg-6">
                <h4>Category</h4>
                <p>@Model.Category?.Name</p>
            </div>
            <div class="col-lg-6">
                <h4>Main Image</h4>
                @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                {
                    <img src="@Model.MainImageUrl" alt="@Model.Name" style="max-width: 200px;" />
                }
                else
                {
                    <span>No image available.</span>
                }
            </div>
            <div class="col-lg-12">
                <h4>Additional Images</h4>
                @if (Model.Images.Any())
                {
                    <div>
                        @foreach (var image in Model.Images)
                        {
                            <img src="@image.ImageUrl" alt="Additional Image" style="max-width: 100px; margin-right: 10px;" />
                        }
                    </div>
                }
                else
                {
                    <span>No additional images available.</span>
                }
            </div>
            <div class="col-lg-12 mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</section>